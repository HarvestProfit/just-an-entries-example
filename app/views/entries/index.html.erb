<p></p>

<h1>Entries</h1>

<p class="lead">
  Summary of all the entries.
</p>

<div class="table-responsive mt-5">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Debit Account</th>
        <th>Credit Account</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Debit</th>
        <th>Credit</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td class="align-middle"><%= entry.date %></td>
          <td class="align-middle"><%= entry.debit_account&.name %></td>
          <td class="align-middle"><%= entry.credit_account&.name %></td>
          <td class="align-middle"><%= entry.name %></td>
          <td class="align-middle"><%= number_to_currency(entry.amount) %></td>
          <td class="align-middle text-success"><%= number_to_currency(entry.debit) %></td>
          <td class="align-middle text-danger"><%= number_to_currency(entry.credit) %></td>
          <td class="align-middle"><%= link_to 'Edit', edit_entry_path(entry), class: 'btn btn-primary' %></td>
          <td class="align-middle"><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Entry', new_entry_path, class: 'btn btn-primary' %>
