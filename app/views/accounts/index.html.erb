<p></p>

<h1>Accounts</h1>

<p class="lead">
  Summary of all the accounts.
</p>

<% if @accounts.size.positive? %>
<div class="table-responsive mt-5">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Balance</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td class="align-middle"><%= account.name %></td>
          <td class="align-middle"><%= number_to_currency(account.balance) %></td>
          <td><%= link_to 'View', account, class: 'btn btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_account_path(account), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<h3>There are no accounts</h3>
<% end %>

<br>

<%= link_to 'New Account', new_account_path, class: 'btn btn-primary' %>
