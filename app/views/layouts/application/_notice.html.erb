<% if notice %>
<div id="toast_notice" class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; top: 3px; right: 3px;" data-delay="4000">
  <div class="toast-header">
    <strong class="mr-auto">Notice</strong>
    <small>Just now</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body text-dark">
    <%= notice %>
  </div>
</div>

<script>
window.onload = function loadToast() {
  if (window.Toast) {
    var toastElement = document.getElementById('toast_notice');
    var toast = new window.Toast(toastElement);
    toast.show();
  }
}
</script>
<% end %>